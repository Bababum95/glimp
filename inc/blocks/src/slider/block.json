{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "glimp/slider",
	"version": "1.0.0",
	"title": "Slider",
	"category": "theme",
	"description": "The part of the Glimp theme.",
	"attributes": {
		"desctop": {
			"type": "string",
			"default": "300px"
		},
		"phone": {
			"type": "string",
			"default": "200px"
		},
		"gap": {
			"type": "string",
			"default": "20px"
		},
		"view": {
			"type": "string",
			"default": "full-screen"
		}
	},
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "glimp/slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
