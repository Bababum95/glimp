{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Glimp",
	"description": "A custom block-based theme designed specifically for Glimp, offering enhanced functionality and a seamless user experience.",
	"settings": {
		"layout": {
			"contentSize": "1290px",
			"allowEditing": true
		},
		"color": {
			"palette": [
				{
					"slug": "glimp-black",
					"color": "#1A1A1A",
					"name": "Black"
				},
				{
					"slug": "glimp-grey",
					"color": "#F2F2F2",
					"name": "Grey"
				},
				{
					"slug": "glimp-grey-text",
					"color": "#838383",
					"name": "Grey-text"
				},
				{
					"slug": "glimp-white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "glimp-primary",
					"color": "#9E58F7",
					"name": "Primary"
				},
				{
					"slug": "glimp-error",
					"color": "#E50000",
					"name": "Error"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Archivo', sans-serif",
					"slug": "glimp-font",
					"name": "Archivo"
				}
			],
			"fontSizes": [
				{
					"name": "S",
					"size": "0.9375rem",
					"slug": "glimp-s"
				},
				{
					"name": "M",
					"size": "1rem",
					"slug": "glimp-m"
				},
				{
					"name": "L",
					"size": "1.125rem",
					"slug": "glimp-l"
				},
				{
					"name": "XL",
					"size": "1.375rem",
					"slug": "glimp-xl"
				},
				{
					"name": "XXL",
					"size": "1.5625rem",
					"slug": "glimp-xxl"
				}
			]
		},
		"custom": {
			"typography": {
				"fontSize": {
					"h1": "clamp(2.625rem, 2.37109375rem + 0.9765625vw, 3.25rem)",
					"h2": "clamp(1.875rem, 1.72265625rem + 0.5859375vw, 2.25rem);"
				}
			}
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			]
		},
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true
		}
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--glimp-black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--glimp-font)",
			"lineHeight": "normal",
			"fontSize": "1rem"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--glimp-font)",
					"fontSize": "var(--wp--custom--typography--font-size--h-1)",
					"lineHeight": "normal",
					"fontWeight": "700"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--glimp-font)",
					"fontSize": "var(--wp--custom--typography--font-size--h-2)",
					"lineHeight": "normal",
					"fontWeight": "700"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--glimp-font)",
					"fontSize": "1.625rem",
					"lineHeight": "normal",
					"fontWeight": "700"
				}
			},
			"link": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--glimp-font)",
					"fontSize": "var(--wp--preset--font-size--glimp-m)",
					"fontWeight": "400",
					"textDecoration": "none"
				},
				"color": {
					"text": "var(--wp--preset--color--glimp-black)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--glimp-primary)"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"color": "currentColor",
					"radius": "15px"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--glimp-font)",
					"fontSize": "var(--wp--preset--font-size--glimp-l)",
					"fontWeight": "600"
				},
				"color": {
					"background": "var(--wp--preset--color--glimp-black)",
					"text": "var(--wp--preset--color--glimp-white)"
				},
				"spacing": {
					"padding": {
						"top": "16px",
						"bottom": "16px",
						"left": "64px",
						"right": "64px"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "uncategorized",
			"name": "produktfilter",
			"title": "Produktfilter"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}